    "main": "src/app.ts",
    "dependencies": {
        "@types/cors": "^2.8.6",
        "@types/express-session": "^1.15.14",
        "@types/pg": "^7.11.2",
        "@types/uuid": "^3.4.5",
        "argon2": "^0.24.1",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-session": "^1.16.2",
        "heml": "^1.1.3",
        "nodemailer": "^6.3.0",
        "pg": "^7.12.1",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/node": "^12.7.8",
        "@types/nodemailer": "^6.2.1",
        "cz-conventional-changelog": "^3.0.2",
        "dotenv": "^8.1.0",
        "eslint": "^6.4.0",
        "eslint-plugin-import": "^2.18.2",
        "husky": "^3.0.5",
        "nodemon": "^1.19.2",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.0",
        "tslint-config-airbnb": "^5.11.2",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.6.3"
    },
    "scripts": {
        "start": "node -r ts-node/register -r dotenv/config ./src/app.ts",
        "watch": "nodemon --watch 'src/**/*.ts' --exec 'npm start'",
        "prebuild": "docker build . -t 'db'",
        "build": "tsc",
        "setup:database": "docker rm -f database ; docker run -d -p 35432:5432 --name database db",
        "lint": "tslint --fix --project tsconfig.json -t codeFrame 'src/**/*.ts'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MeetACelebrity/matcha-back.git"
    },
